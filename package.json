{
  "name": "wa-exercise-5-2014-2015",
  "version": "0.0.0",
  "description": "Exercise 5 of Web Atelier@inf.usi.ch. Express.js and Mongoose",
  "main": "app.js",
  "scripts": {
    "install": "chmod -R u+x ./bin/ && ./bin/installSeleniumAndChromeWebDriver",
    "start": "DEBUG='job-advisor' ./bin/www",
    "dev": "nodemon --exec DEBUG='job-advisor' node --inspect ./bin/www",
    "test": "npm run test-mocha && npm start | node seed.js && ./nightwatch",
    "test-mocha": "JUNIT_REPORT_PATH=./jenkins-test-results.xml istanbul cover --report cobertura _mocha -- --timeout 3000 -R spec ./test/model ./test/function --colors --reporter mocha-jenkins-reporter",
    "test-nightwatch": "node seed.js && ./nightwatch"
  },
  "keywords": [
    "Node.js",
    "Express.js",
    "MongoDB",
    "Mongoose",
    "REST"
  ],
  "author": "Masiar Babazadeh, Vincenzo Ferme, Vasileios Triglianos",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.0",
    "body-parser": "^1.14.1",
    "debug": "^2.2.0",
    "dustjs-helpers": "^1.7.3",
    "dustjs-linkedin": "^2.7.2",
    "express": "^4.13.3",
    "method-override": "^2.3.5",
    "mocha-jenkins-reporter": "^0.3.6",
    "mongodb": "^2.2.22",
    "mongoose": "^4.1.11",
    "morgan": "^1.6.1",
    "supertest": "^1.1.0"
  },
  "devDependencies": {
    "nightwatch": "^0.8.6",
    "should": "^4.0.4"
  }
}
